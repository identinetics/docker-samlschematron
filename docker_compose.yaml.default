version: "2"
services:
  samlschtron:
    image: r2h2/samlschematron
    labels:
      x.service: "SAML metadata validation service"
    restart: unless-stopped
    environment:
      - LOGDIR=/var/log
      - LOGLEVEL=INFO
    networks:
      dfrontend:
    volumes:
      - 04samlschtron.etc_pki:/etc/pki:Z
      - 04samlschtron.var_log:/var/log:Z
networks:
  doverlay:
    external: true
volumes:
  04samlschtron.etc_pki:
  04samlschtron.var_log:

